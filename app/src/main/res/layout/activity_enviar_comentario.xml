<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#E8E3E3"
    tools:context=".Enviar_Comentario">
    <TextView
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:text="Reportar Productos"
        android:gravity="center_horizontal"
        android:layout_marginStart="60dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:text="Ingresa tu usuario"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"/>

    <EditText
        android:id="@+id/User_EditText"
        android:layout_width="190dp"
        android:layout_height="40dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:layout_marginTop="100dp"
        android:hint="Ej: Marvin_trey5"
        android:textColorHint="@color/black"
        android:inputType="textMultiLine" />
    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Tu comentario"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:layout_marginTop="145dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="14dp"/>
    <EditText
        android:id="@+id/Comment_EditText"
        android:layout_width="400dp"
        android:layout_height="140dp"
        android:padding="10dp"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginTop="190dp"
        android:textColorHint="@color/black"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/sendButton"
        style="@style/Widget.Material3.Button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="340dp"
        android:layout_marginTop="335dp"
        android:backgroundTint="#448AFF"
        android:drawableBottom="@android:drawable/ic_menu_send"
        android:textSize="10dp"
        android:textStyle="bold" />
    <ListView
        android:id="@+id/Ver_Lista"
        android:layout_width="match_parent"
        android:hint="Visulizar comentario"
        android:background="#6C304A"
        android:layout_height="260dp"
        android:padding="10dp"
        android:layout_marginTop="390dp"/>
    <ImageView
        android:id="@+id/Volver_Visualizar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#9FABED"
        android:layout_marginStart="330dp"
        android:layout_marginTop="660dp"
        app:srcCompat="@android:drawable/ic_menu_revert" />
</RelativeLayout>